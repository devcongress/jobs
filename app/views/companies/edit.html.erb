<% content_for :title do %>
  <%= "Update #{@company.name} | #{t('app.name')}" %>
<% end %>
<main class="dc-companies-new">
  <article>
    <section class="dc-page--header">
      <div class="uk-container">
        <div class="uk-grid">
          <div class="uk-width-1-2@m uk-margin-small-bottom">
            <h1 class="page--title">Update <%= @company.name %></h1>
          </div>
          <div class="uk-width-1-2@m">
            <p class="dc-job-meta uk-text-right uk-text-middle"></p>
          </div>
        </div>
      </div>
    </section>

    <section class="dc-main--content">
      <div class="uk-container">
        <div class="uk-grid" >
          <div class="uk-flex-last uk-flex-first@m uk-width-expand@m">
            <div class="uk-card uk-card-default uk-card-body dc-content-container">

              <%= form_with(model: @company, :class => "uk-form-horizontal") do |f| %>
                <div class="uk-margin">
                  <%= f.label :name, :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.text_field :name, required: true, placeholder: "Acme Widgets Inc.", :class => "uk-input" %>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :industry, "Industry" %>
                  <div class="uk-form-controls">
                    <%= f.select :industry, StaticData[:industry].map {|v| [v, v]}, {}, { class: "uk-select" } %>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :description, "About", :class => "uk-form-label" %>
                  <%= f.hidden_field :description, required: true, id: 'description' %>
                  <div class="uk-form-controls">
                    <trix-editor input="description"></trix-editor>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :website, "Website", :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.url_field :website, :class => "uk-input" %>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :email, "Contact Email", :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.email_field :email, required: true, :class => "uk-input" %>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :phone, "Contact Phone", :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.telephone_field :phone, required: true, :class => "uk-input" %>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :city, "City", :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.text_field :city, require: true, :class => "uk-input" %>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :state_or_region, "State/Region", :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.text_field :state_or_region, require: true, :class => "uk-input" %>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :post_code, "Post/Zip Code", :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.text_field :post_code, require: true, :class => "uk-input" %>
                  </div>
                </div>

                <div class="uk-margin">
                  <%= f.label :country, "Country", :class => "uk-form-label" %>
                  <div class="uk-form-controls">
                    <%= f.text_field :country, require: true, :class => "uk-input" %>
                  </div>
                </div>

                <div class="uk-form-controls uk-padding-small uk-padding-remove-left">
                  <div class="uk-margin">
                    <%= f.submit "Save", :class => "uk-button uk-button-primary" %>
                    <%= link_to "Cancel", @company, :class => "uk-margin-left uk-padding-small" %>
                  </div>
                </div>
              <% end %>
            
            </div>
          </div>

          <div class="uk-flex-first uk-flex-last@m uk-text-left@m uk-width-1-4@m">
            <div class="uk-card uk-card-default uk-card-body uk-margin-bottom dc-content-container">
              <h3>Instructions</h3>
              <p>You're about to change information about your company.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </article>
</main>
